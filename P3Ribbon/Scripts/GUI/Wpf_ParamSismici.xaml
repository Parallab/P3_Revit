<Window x:Class="P3Ribbon.Scripts.GUI.Wpf_ParamSismici"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P3Ribbon.Scripts.GUI"
             mc:Ignorable="d" MaxHeight="450" MaxWidth="780"  MinHeight="450" MinWidth="780" Height="493"
        >
    <Grid Margin="0,0,0,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2" Grid.Column="4" Grid.Row="1" Grid.RowSpan="5" Stroke="Black" Fill="#FFD4E1F5"/>

        <Rectangle Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1" Grid.RowSpan="5" Stroke="Black" Width="353" Fill="#FFD4E1F5"/>

        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="15" TextWrapping="Wrap" Text="DEFINIZIONI ACCELLERAZIONI SISMICHE" VerticalAlignment="Bottom" Width="353" FontWeight="Bold" FontFamily="Arial" Grid.Column="1" BorderBrush="#00ABADB3"/>




        <Button x:Name="wpfBottZona1" Content="ZONA 1" Grid.Column="1" 
                Margin="3,4,3,4" Grid.Row="2" Background="#FF81B2BF" BorderBrush="#00FFFDFD" Click="WpfbottZona1_Click" FontWeight="Bold" FontFamily="Arial" FontSize="13" VerticalAlignment="Center"/>
        <Button x:Name="wpfbBottZona2" Content="ZONA 2" Grid.Column="1" 
                Margin="3,4,3,4" Grid.Row="3" Background="#FF81B2BF" BorderBrush="#00FFFDFD" FontWeight="Bold" FontFamily="Arial" FontSize="13" VerticalAlignment="Center" Click="WpfbottZona2_Click"/>
        <Button x:Name="wpfBottZona3" Content="ZONA 3" Grid.Column="1" 
                Margin="3,4,3,4" Grid.Row="4" Background="#FF81B2BF" BorderBrush="#00FFFDFD" FontWeight="Bold" FontFamily="Arial" FontSize="13" VerticalAlignment="Center" Click="WpfbottZona3_Click"/>
        <Button x:Name="wpfBottZona4" Content="ZONA 4" Grid.Column="1" 
                Margin="3,4,3,4" Grid.Row="5" Background="#FF81B2BF" BorderBrush="#00FFFDFD" FontWeight="Bold" FontFamily="Arial" FontSize="13" VerticalAlignment="Center" Click="WpfbottZona4_Click"/>
        <TextBox Grid.Column="2" Grid.Row="2" 
                 Text="Sisimicità alta (0.25 &lt; α  ≤ 0.35) " Width="235" 
                 BorderBrush="#00ABADB3" Background="Transparent" Margin="0,0,0,0                  " TextAlignment="Center" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="11"/>
        <TextBox Grid.Column="2" Grid.Row="3" 
                 Text="Sisimicità alta (0.25 &lt; α  ≤ 0.35) " Width="235" 
                 BorderBrush="#00ABADB3" Background="Transparent" Margin="0,0,0,0                  " TextAlignment="Center" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="11"/>
        <TextBox Grid.Column="2" Grid.Row="4" 
                 Text="Sisimicità alta (0.25 &lt; α  ≤ 0.35) " Width="235" 
                 BorderBrush="#00ABADB3" Background="Transparent" Margin="0,0,0,0                  " TextAlignment="Center" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="11"/>
        <TextBox Grid.Column="2" Grid.Row="5" 
                 Text="Sisimicità alta (0.25 &lt; α  ≤ 0.35) " Width="235" 
                 BorderBrush="#00ABADB3" Background="Transparent" Margin="0,0,0,0                  " TextAlignment="Center" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" VerticalAlignment="Center" VerticalContentAlignment="Center" FontSize="11"/>
        <TextBox Grid.Column="1" Grid.Row="1" 
                 Text="ZONA SISMICA" 
                 BorderBrush="#00ABADB3" Background="Transparent" Margin="0,0,0,0                  " TextAlignment="Center" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBox Grid.Column="5" Grid.Row="2" 
            Text="&#xD;&#xA;Costruzioni cui uso preveda normali &#xD;&#xA;affollamenti senza contenuti pericolosi per&#xD;&#xA; l'ambiente e senza funzioni pubbliche e &#xD;&#xA;sociali essenziali. Industie con attività non&#xD;&#xA; pericolose per l'ambiente | Uffici" 
            BorderBrush="#00ABADB3" Background="Transparent" TextAlignment="Justify" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" Grid.RowSpan="2" FontSize="11" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="118"/>
        <Button x:Name="wpfBottCUsoIII" Content="III" Grid.Column="4" 
            Margin="1,26,10,26" Grid.Row="4" Background="#FF81B2BF" BorderBrush="#00FFFDFD" FontWeight="Bold" FontFamily="Arial" FontSize="13" VerticalAlignment="Center" Click="WpfbottCUsoIII_Click"/>
        <Button x:Name="wpfBottCUsoII" Content="II" Grid.Column="4" 
            Grid.Row="2" Background="#FF81B2BF" BorderBrush="#00FFFDFD" FontWeight="Bold" FontFamily="Arial" FontSize="13" Margin="1,62,10,62" Grid.RowSpan="2" VerticalAlignment="Center" Click="wpfBottCUsoII_Click"/>
        <TextBox Grid.Column="5" Grid.Row="4" 
            Text="Costruzioni il cui uso preveda affollamenti &#xD;&#xA;signifficativi. Industrie con attività pericolose &#xD;&#xA;per l'ambiente | Centri commerciali" 
            BorderBrush="#00ABADB3" Background="Transparent" TextAlignment="Justify" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" FontSize="11" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="wpfBottCUsoIV" Content="IV" Grid.Column="4" 
            Grid.Row="5" Background="#FF81B2BF" BorderBrush="#00FFFDFD" FontWeight="Bold" FontFamily="Arial" FontSize="13" VerticalAlignment="Center" Margin="1,26,10,26" Click="WpfbottCUsoIV_Click"/>
        <TextBox Grid.Column="4" Grid.Row="5" 
            Text="Costruzioni con funzioni pubbliche &#xD;&#xA;o strategiche importanti, anche con &#xD;&#xA;riferimento alla gestione della protezione&#xD;&#xA; civile in caso di calimità. Industrie con &#xD;&#xA;attività particolarmente pericolose | Ospedali " 
            BorderBrush="#00ABADB3" Background="Transparent" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" FontSize="11" VerticalContentAlignment="Center" TextAlignment="Justify" VerticalAlignment="Center" Margin="112,0,19,0" Height="71" Grid.ColumnSpan="3"/>
        <Button x:Name="wpfBottCUsoI" Content="I" Grid.Column="4" 
            Grid.Row="1" Background="#FF81B2BF" BorderBrush="#00FFFDFD" FontWeight="Bold" FontFamily="Arial" FontSize="13" VerticalAlignment="Center" Margin="1,26,10,26" Click="WpfbottCUsoI_Click"/>
        <TextBox Grid.Column="5" Grid.Row="1" 
            Text="Costruzioni con presenza solo occasionale&#xD;&#xA; di persone | Edifici agricoli" 
            BorderBrush="#00ABADB3" Background="Transparent" TextAlignment="Justify" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" FontSize="11" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="15" TextWrapping="Wrap" Text="DEFINIZIONE CLASSE D'USO" VerticalAlignment="Bottom" Width="353" FontWeight="Bold" FontFamily="Arial" Grid.Column="3" BorderBrush="#00ABADB3" Margin="28,0,0,0"/>
        <TextBox x:Name="wpfTexBoxAccell" Grid.Column="2" Grid.Row="1" 
            BorderBrush="#FFAAB0C1" Background="White" Margin="91,19,33,20" TextAlignment="Center" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" VerticalContentAlignment="Stretch" Height="22" VerticalAlignment="Center"/>
        <TextBox Grid.Column="2" Grid.Row="1" 
            BorderBrush="#00ABADB3" Background="Transparent" Margin="27,28,139,27" TextAlignment="Center" TextChanged="wpfTextBoxAccell_TextChanged" FontFamily="Arial" FontWeight="Bold" VerticalAlignment="Center" Text="α = αg/g&#x9;"/>
        <Button x:Name="wpfButtAnnulla" Content="Annulla" Grid.Column="5" Height="28" Margin="10,0,125,0" Grid.Row="6" Width="90" BorderBrush="#00707070" Click="wpfBottAnnulla_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="wpfButtOk" Content="Ok" Grid.Column="5" Height="28" Margin="125,0,10,0" Grid.Row="6" Width="90" BorderBrush="#00707070" Click="wpfBottOk_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>

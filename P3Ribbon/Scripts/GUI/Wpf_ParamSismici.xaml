        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="10,26,0,0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" TextAlignment="Center" Text="Sisimicità  medio-bassa (0.05 &lt; α  ≤ 0.15) " FontFamily="Arial" FontSize="11"/>

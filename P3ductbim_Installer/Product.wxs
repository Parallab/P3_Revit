						<Directory Id="AutodekRevitAddin" Name="Addins">
							<?if $(var.Configuration) = Rel_25?>
							<Directory Id="Addins2024" Name="2025" />
							<?elseif $(var.Configuration) = Rel_21_24?>
							<Directory Id="Addins2024" Name="2024" />
